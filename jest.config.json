{
  "preset": "ts-jest",
  "testEnvironment": "jsdom",
  "transform": {
    "^.+\\.tsx?$": ["ts-jest", {
      "babel": true,
      "tsconfig": "tsconfig.json"
    }]
  },
  "testMatch": ["**/*.spec.ts", "**/*.spec.tsx"],
  "moduleNameMapper": {
    "^@types-app": "<rootDir>/src/types/index.ts"
  }
}
